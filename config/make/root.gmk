#
# ROOT make fragment
#

ifdef ROOTSYS

  ROOTCFLAGS := `root-config --cflags`

  # ROOT includes
  CPPFLAGS  +=  $(ROOTCFLAGS)

  #library
  LDFLAGS   += `root-config --nonew --libs`

  LD_LIBRARY_PATH += $(ROOTSYS)/lib
  PATH := $(ROOTSYS)/bin:$(PATH)

else
  $(error define ROOTSYS=/path/to/root/install_dir)
endif
